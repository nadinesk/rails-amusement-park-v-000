
<%= form_tag(controller: "rides", action: "new") do %>
	
	<%= hidden_field_tag 'attraction_id', params[:id] %>
	<%= hidden_field_tag 'user_id', current_user.id %>

	<%= @attraction.name %>	
	<% if current_user.admin %>
		<%= link_to 'Edit Attraction', edit_attraction_path(params[:id]) %>
	<% else %>
		<%= submit_tag("Go on this ride") %>
	<% end %>
<% end %>

